html 
    head
        title= title
        link(rel='stylesheet', href='index.css')
    body
        h1= message
        p Welcome to #{title}
        ul 
            each note in notes
                .note
                    li 
                        if !update && noteId !== note.id_note
                            h2= note.title
                            p= note.description
                            button(
                                    type="button",  
                                    onclick=`updateNote(${note.id_note})`
                                ) Update
                            button(type="button", onclick=`deleteNote(${note.id_note})`) Delete
                        // update
                        if update
                        form(action="/notes/#{note.id_note}" method="PUT")
                            input(type="text" name="title" value=note.title  required placeholder="Title")
                            input(type="text" name="description" value=note.description required  placeholder="Description")
                            input(type="submit" value="Update")
        
        form(action="/" method="POST")
            input(type="text" name="title" placeholder="Title")
            input(type="text" name="description" placeholder="Description")
            input(type="submit" value="Submit")

script.
    function updateNote(idNote){
        console.log('update' + idNote)
        fetch(`/notes/${idNote}`, {
            method: 'PUT',
        }).then(res => {
        if(res.ok) return res.json()
        }).then(data => {
            window.location.reload()
        }).catch(err => {
            console.log(err)
        })
        //- consle.log(note.id_note)
        //- noteId = note.id_note
        //- update = true
        //- location.href=`/notes/${noteId}`
    }
    function deleteNote(noteId){
        console.log('delete')
        fetch(`/notes/${noteId}`, {
            method: 'DELETE',
        }).then(res => {
        if(res.ok) return res.json()
        }).then(data => {
            window.location.reload()
        }).catch(err => {
            console.log(err)
        })
    };